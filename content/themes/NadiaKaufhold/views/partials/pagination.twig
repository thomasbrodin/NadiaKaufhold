<div class="related">
  <div class="pagination">
    {% if pagination.prev %}
        <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">recent posts</a>
    {% endif %}

    {% if pagination.next %}
        <a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">older posts</a>
    {% endif %}
  </div>
    <div class="cat-list">
     {% for cat in categories %}
        <article class="category">
          <a href="{{cat.link}}">
            <figure>
                {% set posts = cat.get_posts() %}
          			<img src="{{posts[0].thumbnail.src|resize(300, 300, 'center')}}">
        			<div>
        				<figcaption>
        						<h5>{{cat.name}}</h5>
        				</figcaption>
        			</div>
        		</figure>
          </a>
        </article>
      {% endfor %}
    </div>
</div>
